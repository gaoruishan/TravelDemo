@import "varibles.styl"
//定义全局公共的样式,相当于方法 引入后直接调用
//文本单行显示
ellipse()
  overflow hidden
  white-space nowrap
  text-overflow ellipsis

//icon图标边距,$baseMargin这个是@import "varibles.styl"中定义的直接'$'调用
iconMargin()
  margin $baseMargin
  color white

//水平方向
horizontal()
  display flex
  flex-direction row

//水平方向居中
horizontalCenter()
  horizontal()
  justify-content center

//垂直方向居中
verticalCenter()
  display flex
  flex-direction column
  justify-content center
